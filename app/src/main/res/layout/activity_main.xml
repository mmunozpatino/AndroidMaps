<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mecha.maps2.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/BCurrentPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Location"/>

    <Button
        android:id="@+id/BSearchPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Place"
        android:layout_below="@+id/BCurrentPlace"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/BNearbyPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Places"/>

</LinearLayout>
